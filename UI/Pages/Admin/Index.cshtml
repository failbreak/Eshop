@page
@model UI.Pages.Admin.IndexModel
@{
    ViewData["Title"] = "Index";
}
<a asp-page="./Create" class="btn btn-info">Add New</a>

<table class="table">
    @foreach (var product in Model.Products)
    {
        <tr>
            <td>@product.Name</td>
            <td>
                <a asp-page="./Edit" asp-route-produktId="@product.ProductId">
                    <i class="fas fa-edit"></i>
                </a>
            </td>
            <td>
                <a asp-page="./Delete" asp-route-produktId="@product.ProductId">
                    <i class="fas fa-trash"></i>
                </a>
            </td>
        </tr>
    }
</table>